# 全局缓存控制
/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# HTML文件缓存控制
*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# JavaScript文件缓存控制
*.js
  Cache-Control: public, max-age=0, must-revalidate

# CSS文件缓存控制
*.css
  Cache-Control: public, max-age=0, must-revalidate

# 图片文件缓存控制
*.png
  Cache-Control: public, max-age=86400
*.jpg
  Cache-Control: public, max-age=86400
*.jpeg
  Cache-Control: public, max-age=86400
*.gif
  Cache-Control: public, max-age=86400
*.svg
  Cache-Control: public, max-age=86400
*.webp
  Cache-Control: public, max-age=86400

# 字体文件缓存控制
*.woff
  Cache-Control: public, max-age=31536000
*.woff2
  Cache-Control: public, max-age=31536000
*.ttf
  Cache-Control: public, max-age=31536000
*.eot
  Cache-Control: public, max-age=31536000

# _next目录下的静态资源
/_next/*
  Cache-Control: public, max-age=0, must-revalidate

# 根目录文件
/
  Cache-Control: no-cache, no-store, must-revalidate
